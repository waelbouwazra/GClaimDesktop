<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="mainPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Article.AddCatController">
    <stylesheets>
        <URL value="@addcat.css" />
    </stylesheets>
   <children>
      <Label layoutX="14.0" layoutY="50.0" text="Nom de la categorie">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </Label>
      <Label layoutX="14.0" layoutY="100.0" text="Couleur">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="txtNom" layoutX="134.0" layoutY="55.0" />
      <TextField fx:id="txtCouleur" layoutX="134.0" layoutY="105.0" />
      <Button fx:id="addCat" layoutX="14.0" layoutY="174.0" mnemonicParsing="false" onAction="#AddCategorie" style="-fx-background-color: c24400;" text="Ajouter " textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="13.0" />
         </font>
      </Button>
      <ListView fx:id="listCategorie" layoutX="300.0" layoutY="50.0" onMouseClicked="#catSelect" prefHeight="222.0" prefWidth="294.0" />
      <Button fx:id="modifCat" layoutX="108.0" layoutY="174.0" mnemonicParsing="false" onAction="#ModifCateg" style="-fx-background-color: c24400;" text="Modifier" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="13.0" />
         </font>
      </Button>
      <Button fx:id="suppCat" layoutX="195.0" layoutY="174.0" mnemonicParsing="false" onAction="#supprimerCat" style="-fx-background-color: c24400;" text="supprimer" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="13.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
